{
    "chapter-without-text": {
        "depth": 2,
        "path": "test",
        "compilePath": "build",
        "ext": "hbs",
        "template": "{#markdown}<%= content %>{/markdown}",
        "levels": [{
            "text": false,
            "slug": "chapter",
